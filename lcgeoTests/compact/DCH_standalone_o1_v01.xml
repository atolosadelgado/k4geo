<lccdd >

  <info name="DCH standalone"
        title="DCHsubdetector"
        author="A. Tolosa Delgado, Brieuc Francois"
        url="https://indico.cern.ch/"
        status="development"
        version="o2, v01">
	<comment>The compact format of the DCH subdetector, built from XLSX spreadsheet</comment>
  </info>

<includes>
  <gdmlFile ref="../../FCCee/CLD/compact/CLD_o3_v01/elements.xml"/>
  <gdmlFile ref="../../FCCee/CLD/compact/CLD_o3_v01/materials.xml"/>
  <gdmlFile ref="DCH_materials.xml"/>
</includes>

<define>
  <constant name="world_side"             value="10*m"      />
  <constant name="world_x"                value="world_side"/>
  <constant name="world_y"                value="world_side"/>
  <constant name="world_z"                value="world_side"/>
  <constant name="DetID_DCH"              value="1"/>
  

  <!-- Vesssel geometry   -->
  <constant name="dch_inner_cyl_R_z0"       value=" 350 * mm "    />
  <constant name="dch_outer_cyl_R_z0"       value=" 2000 * mm "    />
  <constant name="dch_L"                    value=" 4000 * mm "    />
  <constant name="dch_Lhalf"                value=" dch_L/2.0 "    />
  <constant name="dch_vessel_thickness"     value=" 1 * mm"  />

  <!-- Position of guard wires   -->
  <constant name="dch_in_guard_z0"          value=" dch_inner_cyl_R_z0 + 4*mm "    />
  <constant name="dch_out_guard_zL2"        value=" dch_outer_cyl_R_z0 - 12.5 "    />

  <!-- Parametrization of number of cells ands layer/superlayer   -->
  <constant name="dch_ncell"                value=" 192 "    />
  <constant name="dch_ncell_increment"      value=" 48 "    />
  <constant name="dch_nsuperlayers"         value=" 14 "    />
  <constant name="dch_nlayersPerSuperlayer" value=" 8 "    />
  <constant name="dch_ncell_per_sector"     value=" 24 "   />

  <!-- sense wire thickness (total)   -->
  <constant name="dch_SWire_thickness"           value="0.0206*mm"   />
  <!-- sense wire thickness (core), ignored at the moment   -->
  <constant name = "CDCH:SWireShellThickIn"      value = "0.020*mm"/>
  <!-- sense wire thickness (coating), to be added to core, ignored at the moment   -->
  <constant name = "CDCH:SWireShellThickOut"     value = "0.0006*mm"/>

  <!-- Alfa = twistangle/2   -->
  <constant name="dch_alpha"                value=" 15*deg "    />

  <!--  Parameters of first layer  -->
  <constant name="dch_first_sense_r"        value=" dch_in_guard_z0 + 8*mm "    />
  <constant name="dch_first_width"          value=" 2*3.14159265358979* dch_first_sense_r / dch_ncell"    />

</define>

